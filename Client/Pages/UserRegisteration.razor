@page "/user-registration"
@inject IAccountService accountService
@inject NavigationManager navigationManager

<!-- Section: Design Block -->
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        The best offer <br />
                        <span class="text-primary">for your business/home</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Looking for home? . Landlord got you
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <EditForm Model="register" OnValidSubmit="HandleRegistration">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="form3Example1" class="form-control" @bind-value=register.FirstName />
                                            <label class="form-label" for="form3Example1">First name</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="form3Example2" class="form-control"@bind-value=register.LastName />
                                            <label class="form-label" for="form3Example2">Last name</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="form3Example1" class="form-control" @bind-value=register.Address />
                                            <label class="form-label" for="form3Example1">Address</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="form3Example2" class="form-control" @bind-value=register.Phone />
                                            <label class="form-label" for="form3Example2">Phone</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="form3Example1" class="form-control" @bind-value=register.Email />
                                            <label class="form-label" for="form3Example1">Email</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="password" id="form3Example2" class="form-control" @bind-value=register.Password />
                                            <label class="form-label" for="form3Example2">Password</label>
                                        </div>
                                    </div>
                                </div>
                                <!-- Submit button -->
                                <button type="submit"  class="btn btn-primary btn-block mb-4">
                                    Sign up
                                </button>

                            </EditForm>
                           
                               
                                

                     
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->

@code {

    UserRegisterDTO register = new();

    public async Task HandleRegistration()
    {
        var result = await accountService.Register(register);
        navigationManager.NavigateTo("/userlogin");
    }

}
