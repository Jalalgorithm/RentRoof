@page "/book-confirmation"

@inject BookingService bookingService

@attribute [Authorize(Roles ="Client")]

<div class="container" style="max-width: 600px; margin: 0 auto; background-color: #f6f6f6;">
    <div class="row">
        <div class="col-12">
            <div class="card" style="border: 1px solid #e9e9e9; margin: 20px 0;">
                <div class="card-header text-center" style="background-color: #38414a; color: #fff; padding: 20px;">
                    <a href="#" style="font-size: 32px; color: #fff; text-decoration: none;">LandLord</a>
                    <br>
                    <span style="margin-top: 10px; display: block;">Congratulations: Your application is successful!</span>
                </div>
                <div class="card-body" style="padding: 20px;">
                    <p>You have <strong>1 free report</strong> remaining.</p>
                    <p>@message</p>
                    <a href="#" class="btn btn-primary" style="background-color: #f1556c; border-color: #f1556c;">Back to Home</a>
                    <p style="margin-top: 20px;">Thanks for choosing <b>LandLord</b> </p>
                    <p>Admin</p>
                </div>
            </div>
            <div class="text-center" style="color: #999; padding: 20px;">
                <a href="#" style="color: #999; text-decoration: underline;">Unsubscribe</a> from these alerts.
            </div>
        </div>
    </div>
</div>

@code {


    private string message { get; set; }

    protected override void OnInitialized()
    {
        message = bookingService.BookingMessage;
    }

}

